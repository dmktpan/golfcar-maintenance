# Production Environment Configuration
# Copy this file to .env.production and update the values

# Environment
NODE_ENV=production

# Base URL Configuration (⚠️ REQUIRED)
# Set this to your production domain URL
# Example: https://yourdomain.com or http://your-server-ip:3000
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"

# Database Configuration (⚠️ REQUIRED)
# Use your production MongoDB connection string
DATABASE_URL="mongodb://username:password@your-mongodb-host:27017/golfcarmaintenance_production"
MONGODB_URI="mongodb://username:password@your-mongodb-host:27017/golfcarmaintenance_production"

# External API Configuration (⚠️ REQUIRED)
# External API base URL for golf cart data
EXTERNAL_API_BASE_URL="http://golfcar.go2kt.com:8080/api"
EXTERNAL_API_TIMEOUT=15000

# Security Configuration
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=public/uploads

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=logs/production.log

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# SSL Configuration (if using HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Session Configuration
SESSION_SECRET=your-very-long-random-session-secret-here
SESSION_TIMEOUT=3600000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000