# Database Configuration
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
DATABASE_URL="mongodb://localhost:27017/golfcarmaintenance_db"
MONGODB_URI="mongodb://localhost:27017/golfcarmaintenance_db"

# External API Configuration (⚠️ REQUIRED for Production)
# External API base URL for golf cart data
EXTERNAL_API_BASE_URL="http://golfcar.go2kt.com:8080/api"
EXTERNAL_API_TIMEOUT=15000

# Environment
NODE_ENV="development"

# Base URL Configuration
# This is required for proper file URL generation
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=public/uploads

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log